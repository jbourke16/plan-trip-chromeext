{
    "manifest_version": 3,
    "name": "Trip Planner",
    "version": "1.0",
    "description": "Plan and organize your trips efficiently.",
    "permissions": ["storage", "tabs", "geolocation"],
    "host_permissions": ["https://*.google.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }